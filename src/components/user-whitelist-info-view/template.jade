if mode == 'loading'
  .ss.loader
    i.fa.fa-refresh.fa-spin
else if mode == 'error'
  .ss.center-text
    p.ss.heavy= error
    p= strings.phrases.tryAgain
else
  if permissions.whitelist.grant
    table
      tr
        td Vendor
          td.vendor-select
            select.ss.expand(role="switch-vendor", name="grant-vendor")
              option(value="YouTube") YouTube
              option(value="Twitch") Twitch
              option(value="Beam") Beam
      tr
        td Identity
        td
          input.ss.expand(name="grant-identity",
                          type="text"
                          placeholder="Username"
                          twitch-placeholder="Username"
                          youtube-placeholder="Channel ID")
      tr
        td
        td
          button.ss.bg-action(role="grant-whitelist") Grant Free Whitelist

    br
    br

    table.ss.bordered.whitelists.fsr
      thead
        tr
          th Vendor
          th Identity
          th Paid
          th Remaining
          th.ss.center-text Whitelisted
          th

      tbody