nav.ss.table-filters
  .options
    .ss.input-button
      input.ss(type="text" role="label-title" placeholder="#{strings.labels.addPlaceholder}")
      button.ss.bg-action.hover(role="add")= strings.defaults.add
  .filter
    .ss.search
      input.ss(type="text" role="filter" placeholder="#{strings.defaults.filter}")
      i.fa.fa-remove(role="cancel-filter")

section
  div
    table.ss.pane-table
      thead
        tr
          th= strings.defaults.name
      tbody

nav.ss.table-pagination.no-pages
  button.ss.fake(role='page-previous')
    i.fa.fa-chevron-left
    span  Previous 
      span(role='increment')= increment
  label.ss(role='results') &nbsp;
  button.ss.fake(role='page-next')
    span Next 
      span(role='increment')= increment
      |  
    i.fa.fa-chevron-right