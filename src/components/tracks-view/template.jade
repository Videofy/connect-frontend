if mode == 'loading' 
  .ss.loader
    i.fa.fa-refresh.fa-spin
else if mode == 'error'
  .ss.padded.center-text
    p.ss.heavy= error 
    p= strings.phrases.tryAgain
else
  nav.ss.table-filters
    .options
      if canCreate
        .ss.input-button
          input.ss(type="text" role="track-title" placeholder="#{strings.tracks.newPlaceholder}")
          button.ss.bg-action.hover(role="add-track")= strings.defaults.add
      select.ss(role="catalog-filter" filter='catalogs')
        option(value='') Any Catalog
        option(value='sync') Sync
        option(value='gold') Gold
        option(value='license') License
    .filter
      label.ss.results(role='results-count')
      .ss.search
        input.ss(type="text" role="filter" placeholder="#{strings.defaults.filter}" tabindex=1)
        i.fa.fa-remove(role="cancel-filter")
  section
    div
      table.ss.pane-table
        thead
          tr
            th.ss.cancel-padding  
            th.ss.cancel-padding  
            th.sortable(sort-on="title")= strings.defaults.title
              i.fa.fa-sort-asc.indicator-asc
              i.fa.fa-sort-desc.indicator-desc
            th.sortable(sort-on="artistsTitle")= strings.defaults.artists
              i.fa.fa-sort-asc.indicator-asc
              i.fa.fa-sort-desc.indicator-desc
            th.sortable.cancel-padding.ss.center-text(sort-on="warnings")
              i.fa.fa-flag
              i.fa.fa-sort-asc.indicator-asc
              i.fa.fa-sort-desc.indicator-desc
            th.sortable(sort-on="created")= strings.defaults.date
              i.fa.fa-sort-asc.indicator-asc
              i.fa.fa-sort-desc.indicator-desc
            th.sortable(sort-on="isrc")= strings.defaults.isrc
              i.fa.fa-sort-asc.indicator-asc
              i.fa.fa-sort-desc.indicator-desc
            th= strings.defaults.identifier
            th.ss.cancel-padding= strings.defaults.actions
        tbody

  nav.ss.table-pagination.no-pages
    button.ss.fake(role='page-previous')
      i.fa.fa-chevron-left
      span  Previous 
        span(role='increment')= increment
    label.ss(role='results') &nbsp;
    button.ss.fake(role='page-next')
      span Next 
        span(role='increment')= increment
        |  
      i.fa.fa-chevron-right